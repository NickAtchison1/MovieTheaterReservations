}

<h1>Details</h1>

<div>
    <h4>MovieDetail</h4>
    <hr />
    <dl class="row">
        
        <dd class = "col-sm-10">
            @Html.HiddenFor(model => model.MovieId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
